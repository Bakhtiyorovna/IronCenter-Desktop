<Page x:Class="IronCenter.Desktop.Pages.Dashboard.Products.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IronCenter.Desktop.Pages.Dashboard.Products"
       xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"   
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Products"
      Background="{DynamicResource PrimaryBackground}" 
      Loaded="Page_Loaded">
   

   <Grid>
        <Border CornerRadius="15"
                   Background="{DynamicResource PagesBackgraundColor}" 
                   Opacity="0.3">
        </Border>
        <Grid
             Margin="10" 
             Height="70"
             VerticalAlignment="Top">
            <Border
           
            Background="{DynamicResource PagesBackgraundColor}"
            Opacity="0.2"
            CornerRadius="15"
          
            >
         
        </Border>
            <icon:PackIconMaterial Kind="Package"
                     Width="15" 
                     Height="15" 
                     Margin="15"
                     HorizontalAlignment="left"
                     VerticalAlignment="Center"
                     Foreground="{DynamicResource TextColor}"/>
            <TextBlock
                
                Text="333 ta mahsulot mavjud"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="40 0"
                Foreground="{DynamicResource TextColor}"
                FontSize="16"></TextBlock>
        </Grid>
        <Border Height="40" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="25"
                Padding="1 0"
                CornerRadius="9"
                Background="{DynamicResource TextColor}">
             <Grid Height="40" 
              VerticalAlignment="Top"
              HorizontalAlignment="Right"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="38"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" 
                     Background="#032B4F"
                     Height="36"
                     CornerRadius="10 0 0 10"
                     Width="8"
                     Margin="1 0 -1 0">
                
            </Border>
            <TextBox x:Name="TextBoxSearch" 
                      Style="{DynamicResource searchTextBox}"
                      Grid.Column="1"
                      MaxLength="30"
                      Width="300"
                      Height="36"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      
                     >
            </TextBox>
            <Border Grid.Column="2" 
                     Background="#032B4F"
                     CornerRadius="0 10 10 0"
                     Height="36">

                <icon:PackIconMaterial Kind="Magnify" 
                                    Width="15" 
                                    Height="15" 
                                    Margin="0 0 10 0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource TextColor}"/>
            </Border>

        </Grid>
        </Border>

        <ScrollViewer Margin="10 90 10 60"
                   >
            <WrapPanel x:Name="wrpCourses" >

            </WrapPanel>
        </ScrollViewer>
        <Button
             Height="38"
             Margin="10"
             Content="Yangi mahsulot qo'shish"
             Style="{DynamicResource AddButton}"
             VerticalAlignment="Bottom"
             HorizontalAlignment="Right"
             Click="Button_Click"
            >
            
        </Button>
    </Grid> 
</Page>
