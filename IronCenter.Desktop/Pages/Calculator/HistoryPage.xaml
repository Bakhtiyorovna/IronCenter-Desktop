<Page x:Class="IronCenter.Desktop.Pages.Calculator.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IronCenter.Desktop.Pages.Calculator"
      mc:Ignorable="d" 
  d:DesignHeight="500" d:DesignWidth="800"
  Loaded="Page_Loaded"
  Background="{DynamicResource PrimaryBackground}" >
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" 
          Grid.ColumnSpan="2"
          Grid.Row="0"
          Margin="0">
                <Border CornerRadius="0 15 0 0" 
         Background="#1C4F82">

                </Border>
                <TextBlock 
     x:Name="Title_Txb"
         Text="Hisoblashlar tarixi"
         FontSize="20"
         Foreground="{DynamicResource TextColor}"
         TextAlignment="Center"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
 >
                </TextBlock>
            </Grid>
            
            <Grid 
                Height="400"
                Grid.Row="1"
                Background="#FFFFFF" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0"
                    Margin="20,15,20,180">
                    <WrapPanel x:Name="wrpCourses" >

                    </WrapPanel>
                </ScrollViewer>
                <Button
                    Grid.Row="1"
      Height="38"
      Margin="10"
      Content="Hisoblash tarixini tozalash"
      Style="{DynamicResource AddButton}"
      VerticalAlignment="Bottom"
      HorizontalAlignment="Right"
     >

                </Button>
            </Grid>
        </Grid>
    
</Page>
