<Page x:Class="IronCenter.Desktop.Pages.Calculator.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IronCenter.Desktop.Pages.Calculator"
      mc:Ignorable="d" 
  d:DesignHeight="600" d:DesignWidth="600"
  Loaded="Page_Loaded"
      x:Name="page"
      
  Background="Transparent" >
    <Grid >
        <Grid VerticalAlignment="Top">
            <Border CornerRadius="0 15 0 0" 
                    Background="#1C4F82"
                    Margin="0 0 0 0"
                    Height="50">

            </Border>
            <TextBlock 
         x:Name="Title_Txb"
         Text="Hisoblashlar tarixi"
         FontSize="20"
         Foreground="{DynamicResource TextColor}"
         TextAlignment="Center"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
 >
            </TextBlock>
        </Grid>

        <Grid  
                Margin="0,50,0,50"
                Background="#FFFFFF" 
                Grid.ColumnSpan="2" 
             >
            <ScrollViewer
                    Margin="20,15,20,10" >
                <WrapPanel x:Name="wrpCourses" >

                </WrapPanel>
            </ScrollViewer>
        </Grid>
        <Grid   Margin="0 0 0 0"
            Height="60"
            VerticalAlignment="Bottom"
            Background="#FFF"
                > <Button
 Height="38"
 Margin="0,0,10,10"
 Content="Hisoblash tarixini tozalash"
 Style="{DynamicResource AddButton}"
 VerticalAlignment="Bottom"
 HorizontalAlignment="Right" Width="230"
 Click="Button_Click">

        </Button>
        </Grid>
       
    </Grid>

</Page>
