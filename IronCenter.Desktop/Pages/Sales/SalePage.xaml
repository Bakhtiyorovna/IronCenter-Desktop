<Page x:Class="IronCenter.Desktop.Pages.Sales.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IronCenter.Desktop.Pages.Dashboard.Products"
       xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"   
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Products"
      Background="{DynamicResource PrimaryBackground}" 
      Loaded="Page_Loaded">


    <Grid>
        <Border CornerRadius="15"
                   Background="{DynamicResource PagesBackgraundColor}" 
                   Opacity="0.3">

        </Border>
        <Grid
             Margin="10" 
             Height="70"
             VerticalAlignment="Top">
            <Border
            CornerRadius="15"
            >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#014B8C" Offset="0.0" />
                        <GradientStop Color="#417397" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0" HorizontalAlignment="Center">
                    <icon:PackIconMaterial Kind="Repeat"
Width="15" 
Height="15" 
Margin="70 15 0 15 "
HorizontalAlignment="Left"
VerticalAlignment="Center"
Foreground="{DynamicResource TextColor}"/>
                    <TextBlock
                        TextWrapping="Wrap"
                        Width="150"
Text="Joriy oydagi moliyaviy holat"
VerticalAlignment="Center"
HorizontalAlignment="Left"
Margin="10 0"
Foreground="{DynamicResource TextColor}"
FontSize="16"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
                    <icon:PackIconMaterial Kind="CalculatorVariant"
          Width="15" 
          Height="15" 
          Margin="15 0 10 0"
          HorizontalAlignment="left"
          VerticalAlignment="Center"
          Foreground="{DynamicResource TextColor}"/>
                    <TextBlock
     x:Name="txbIncome"
     Text="0 USD Daromad"
     VerticalAlignment="Center"
     HorizontalAlignment="Left"
     Margin="0 0"
     Foreground="#007BFF"
     FontSize="16"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <icon:PackIconMaterial Kind="PlusBoxMultiple"
     Width="15" 
     Height="15" 
      Margin="15 0 10 0"
     HorizontalAlignment="left"
     VerticalAlignment="Center"
     Foreground="{DynamicResource TextColor}"/>
                    <TextBlock
x:Name="txbBenefit"
Text="0 USD Foyda"
VerticalAlignment="Center"
HorizontalAlignment="Center"
Margin="0 0"
Foreground="#32CD32"
FontSize="16"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="3">
                    <icon:PackIconMaterial Kind="MinusBoxMultiple"
     Width="15" 
     Height="15" 
     Margin="15 0 10 0"
     HorizontalAlignment="left"
     VerticalAlignment="Center"
     Foreground="{DynamicResource TextColor}"/>
                    <TextBlock
x:Name="txbZarar"
Text="0 USD Zarar"
VerticalAlignment="Center"
HorizontalAlignment="Left"
Margin="0 0"
Foreground="#DC143C"
FontSize="16"></TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
        <Border Height="30"
CornerRadius="15 15 0 0"
      Margin="10 90 30 0"
    VerticalAlignment="Top"
>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#014B8C" Offset="0.0" />
                    <GradientStop Color="#417397" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Margin="10 90 30 0"
           VerticalAlignment="Top"
           Height="30"
          >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                  Grid.Column="0"
                  x:Name="txbNo" 
                  Text="No"
                  VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                  Foreground="#FFF"
                  FontFamily="24" ></TextBlock>
            <TextBlock 
       Grid.Column="1"
       x:Name="txbproductName" 
       Text="Mahsulot nomi"
       VerticalAlignment="Center"
         HorizontalAlignment="Center"
       Foreground="#FFF"
       FontFamily="24" ></TextBlock>
            <TextBlock 
Grid.Column="2"
x:Name="txbArrivilDate" 
Text="Sotuv sanasi"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

            <TextBlock 
Grid.Column="3"
x:Name="txbSaleDate" 
Text="Xarid narxi"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

            <TextBlock 
Grid.Column="3"
x:Name="txbSalePrice" 
Text="Xarid narxi"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

            <TextBlock 
Grid.Column="4"
x:Name="txbSaleQuintity" 
Text="Sotuv soni"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

            <TextBlock 
Grid.Column="5"
x:Name="txbSaleQuintityPrice" 
Text="Sotuv narxi"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

            <TextBlock 
Grid.Column="6"
x:Name="txbSaleincome" 
Text="Daromad"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

            <TextBlock 
Grid.Column="7"
x:Name="txbSalebenefit" 
Text="Foyda"
VerticalAlignment="Center"
  HorizontalAlignment="Center"
Foreground="#FFF"
FontFamily="24" ></TextBlock>

        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"  Margin="10 120 10 60">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="10"/>
                    <!-- ScrollBar Width -->
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="Transparent">
                                    <Track Name="PART_Track" 
                            IsDirectionReversed="true"
                            Focusable="false">


                                        <Track.Thumb>
                                            <Thumb Background="#417397"
                                    Height="50"
                                    Width="10">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border CornerRadius="5" 
                                                 Background="{TemplateBinding Background}"/>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>


                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ScrollViewer.Resources>

            <WrapPanel x:Name="wrpCourses" 
                       >
              
            </WrapPanel>
        </ScrollViewer>


    </Grid>
</Page>
