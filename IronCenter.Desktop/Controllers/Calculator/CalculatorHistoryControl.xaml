<UserControl x:Class="IronCenter.Desktop.Controllers.Calculator.CalculatorHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IronCenter.Desktop.Controllers.Calculator"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="600">
    <Grid Height="100"
          Width="600">
        <Border Background="AliceBlue"
                CornerRadius="15"
                BorderThickness="0 0 3 2"
                BorderBrush="{DynamicResource EventTextColor}"
                Margin="10 10 20 10">
            
        </Border>
        <TextBlock x:Name="Title"
                   Text="To'rtburchak truba:   10*10*2  L=10"
                   VerticalAlignment="Top"
                   Margin="20"
                   Foreground="#446583"
                   FontSize="20"></TextBlock>
       
        <TextBlock x:Name="ResultTitle"
                   Text="Og'irlik: 212,232kg"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Margin="20 0 40 25"
                   Foreground="#1E1E1E"
                   FontSize="20"
                   >
            
        </TextBlock>
    </Grid>
</UserControl>
