<Window x:Class="IronCenter.Desktop.Windows.Storages.StorageCreateWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronCenter.Desktop.Converts"
        mc:Ignorable="d"
        Title="BuyerProductCreateWindow" Height="500" Width="500"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- BooleanToVisibilityConverter ni resurs sifatida qo‘shish -->
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                CornerRadius="10 10 0 0"
                Background="#FFF">
            <Button x:Name="btnCreateWindowClose"
                    Style="{DynamicResource CloseButtun}"                    
                    HorizontalAlignment="Right"
                    Click="btnCreateWindowClose_Click"/>
        </Border>

        <Grid Grid.Row="1">

            <Border
                Background="#FFF"
                CornerRadius="0 0 10 10" HorizontalAlignment="Left" Width="500">
                <StackPanel Margin="10 0">

                    <Label Content="Ma'lumotlarni kiriting !"
                                   FontSize="24"
                                   Margin="11 10 0 0"
                                   Foreground="{DynamicResource FifthTextColor}"/>

                    <StackPanel Grid.Column="0"
                                    Margin="0"
                                    VerticalAlignment="Center">
                        <Label Content="Mahsulot"
                                   FontSize="16"
                                   Margin="13 5 5 0"
                                   Foreground="{DynamicResource DimTextColor}"
                                   />
                        <Border Height="35" 
                                    Margin="10 0"
                                    BorderThickness="2"
                                    BorderBrush="#569CD6"
                                    CornerRadius="5">
                            <ComboBox x:Name="cmbProduct"
                                      Height="40" 
                                      Margin="4 0"
                                      FontSize="16"                                      
                                      BorderThickness="0"
                                      Background="#FFF"
                                      Foreground="#446583"
                                      VerticalAlignment="Center"
                                      SelectedIndex="0">
                            </ComboBox>
                        </Border>
                    </StackPanel>
                    <Grid>

                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center" Height="265">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                    Content="Miqdori"
                                   FontSize="16"
                                   Margin="10 5 0 0"
                                   Foreground="{DynamicResource DimTextColor}"
                                   />
                                <Label Grid.Column="1"
                                    Content="Birligi"
                                       FontSize="16"
                                       Margin="10 5 0 0"
                                       Foreground="{DynamicResource DimTextColor}"
                                       />

                            </Grid>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                    x:Name="txbQuintity"  
                                Style="{DynamicResource CalculatorImputTextBox}">

                                </TextBox>

                                <Border Grid.Column="1" Height="35" 
             Margin="5 0 10 0"
             BorderThickness="2"
             BorderBrush="#569CD6"
             CornerRadius="5">
                                    <ComboBox x:Name="cmbQuintityUnitary"
               Height="40" 
               Margin="0 0 4 0"
               FontSize="16"                                      
               BorderThickness="0"
               Background="#FFF"
               Foreground="#446583"
               VerticalAlignment="Center">
                                    </ComboBox>
                                </Border>
                            </Grid>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                        Content="Narxi"
                                       FontSize="16"
                                       Margin="10 5 0 0"
                                       Foreground="{DynamicResource DimTextColor}"
                                       />
                                <Label Grid.Column="1"
                                       Content="Birligi"
                                       FontSize="16"
                                       Margin="10 5 0 0"
                                       Foreground="{DynamicResource DimTextColor}"
                                       />

                            </Grid>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                           x:Name="txbProductPrice"  
                                       Style="{DynamicResource CalculatorImputTextBox}">

                                </TextBox>
                                <Border Grid.Column="1" Height="35" 
                                        Margin="5 0 10 0"
                                        BorderThickness="2"
                                        BorderBrush="#569CD6"
                                        CornerRadius="5">
                                    <ComboBox x:Name="cmbCorency"
                                          Height="40" 
                                          Margin="0 0 4 0"
                                          FontSize="16"                                      
                                          BorderThickness="0"
                                          Background="#FFF"
                                          Foreground="#446583"
                                          VerticalAlignment="Center"
                                              Padding="5">
                                    </ComboBox>
                                </Border>
                            </Grid>
                            <Label
                                  Content="Kelgan sanasi"
                                 FontSize="16"
                                 Margin="10 5 0 0"
                                 Foreground="{DynamicResource DimTextColor}"
                                 />
                            <DatePicker x:Name="dtmArrivaldate"
                                Height="40"
                                HorizontalAlignment="Center"
                                Background="White"
                                Foreground="#446583"
                                BorderThickness="0"
                                FontSize="16"
                                Padding="0"
                                SelectedDateFormat="Short" Width="460">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#446583"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="Padding" Value="10,5 10 0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePickerTextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            Height="38"
                                                            BorderBrush="#569CD6"
                                                            BorderThickness="2"
                                                            CornerRadius="5"
                                                            >
                                                        <Grid>
                                                            <!-- TextBlock uchun Visibility binding -->
                                                            <ScrollViewer x:Name="PART_ContentHost" />
                                                           
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>

                        </StackPanel>

                    </Grid>
                    <Button
 Height="40"
 Content="Qo'shish"
 Style="{DynamicResource CalSolveButton}" Width="464"
                        Click="Button_Click"
/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
