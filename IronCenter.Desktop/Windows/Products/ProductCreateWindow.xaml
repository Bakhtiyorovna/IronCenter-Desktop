<Window x:Class="IronCenter.Desktop.Windows.Products.ProductCreateWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronCenter.Desktop.Windows.Products"
        mc:Ignorable="d"
        Title="BuyerProductCreateWindow" Height="450" Width="500"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                CornerRadius="10 10 0 0"
                Background="#FFF">
            <Button x:Name="btnCreateWindowClose"
                    Style="{DynamicResource CloseButtun}"                    
                    HorizontalAlignment="Right"
                    Click="btnCreateWindowClose_Click"/>
        </Border>

        <Grid Grid.Row="1">

            <Border
                Background="#FFF"
                CornerRadius="0 0 10 10">
                <StackPanel Margin="10 0">

                    <Label Content="Ma'lumotlarni kiriting !"
                                   FontSize="24"
                                   Margin="11 10 0 0"
                                   Foreground="{DynamicResource FifthTextColor}"/>

                    <StackPanel Grid.Column="0"
                                    Margin="0"
                                    VerticalAlignment="Center">
                        <Label Content="Kategoriya"
                                   FontSize="16"
                                   Margin="13 5 5 0"
                                   Foreground="{DynamicResource DimTextColor}"
                                   />
                        <Border Height="35" 
                                    Margin="10 0"
                                    BorderThickness="2"
                                    BorderBrush="#569CD6"
                                    CornerRadius="5">
                            <ComboBox x:Name="cmbCategory"
                                      Height="40" 
                                      Margin="4 0"
                                      FontSize="16"                                      
                                      BorderThickness="0"
                                      Background="#FFF"
                                      Foreground="#446583"
                                      VerticalAlignment="Center"
                                      SelectedIndex="0">
                            </ComboBox>
                        </Border>
                    </StackPanel>
                    <Grid>

                        <StackPanel
                                    Margin="0"
                                    VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Nomi"
                                   FontSize="16"
                                   Margin="10 5 0 0"
                                   Foreground="{DynamicResource DimTextColor}"
                                   />
                                <Label 
                                   x:Name="lb_nomi"
                                   Foreground="Red"
                                       HorizontalAlignment="Left"
                                   Visibility="Hidden"
                                   Content="*"
                                   FontSize="20"
                                    Height="25"
                                   Margin="-5 0 320 0">

                                </Label>
                            </StackPanel>
                            <TextBox x:Name="txtProductName"  
                                Style="{DynamicResource CalculatorImputTextBox}">

                            </TextBox>
                            <Grid>
                                <Label Content="Mahsulot rasmi"
FontSize="16"
Margin="13 5 5 0"
Foreground="{DynamicResource DimTextColor}"
/>

                                <!-- Button for selecting image -->
                                <Button Content="Rasm Tanlash" 
                            VerticalAlignment="Top" 
                            Style="{DynamicResource CalSolveButton}"
                            Margin="10,40,10,0" Click="Button_Click"
                            Foreground="White" FontSize="16" BorderBrush="White" 
                            BorderThickness="2"
                       />
                            </Grid>
                        </StackPanel>

                    </Grid>


                    <Label Content="Iltimos, ma'lumotlarni tekshirib, 'Qo‘shish' tugmasini bosing."
FontSize="16"
Margin="13 15 0 0"
Foreground="{DynamicResource DimTextColor}"
/>



                    <Button
 Height="40"
 Margin="10 10 10 20"
 Content="Qo'shish"
 Style="{DynamicResource CalSolveButton}"
 VerticalAlignment="Bottom"
                        Click="Button_Click"
>

                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
