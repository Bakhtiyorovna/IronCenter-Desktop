<Window x:Class="IronCenter.Desktop.Windows.Categories.CategoryDeleteWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronCenter.Desktop.Windows.Products"
        mc:Ignorable="d"
        Title="BuyerProductCreateWindow" Height="180" Width="500"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                CornerRadius="10 10 0 0"
                Background="#FFF">
            <Button x:Name="btnCreateWindowClose"
                    Style="{DynamicResource CloseButtun}"                    
                    HorizontalAlignment="Right"
                    Click="btnCreateWindowClose_Click"/>
        </Border>

        <Grid Grid.Row="1">

            <Border
                Background="#FFF"
                CornerRadius="0 0 10 10">
                <StackPanel Margin="10 0">

                    <Label x:Name="txb"
                        Content="Razvetka mahsuloti o'chirilsinmi?"
                                   FontSize="24"
                                   Margin="11 10 0 0"
                                   Foreground="{DynamicResource FifthTextColor}"/>

                    <Button
                        Height="40"
                        Margin="10 20"
                        Content="O'chirish"
                        Style="{DynamicResource CalSolveButton}"
                        VerticalAlignment="Bottom"
                        Click="Button_Click"
>

                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
